package whileexo;

import java.util.Scanner;

public class exo5 {

	public static void main(String[] args) {
		 Scanner clavier = new Scanner(System.in); 
			
			System.out.println("Donner nbr");
			
			int nbr = clavier.nextInt();
			int max = nbr;
			int min = nbr;
			int pos =0;
			
			while(nbr >=0) {
				
				System.out.println("Donner nbr");
				nbr = clavier.nextInt();
				if( nbr > max) {
					max = nbr;
					pos++;
					
				}
				if(min < nbr) {
					
					min = nbr;
					pos++;
				}
				
			
			}
			
			
			System.out.println(max + " "+ pos);
			System.out.println(min + " "+ pos);
			System.out.println("bye bey");
		
		
	}

}
