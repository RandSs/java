package whileexo;

import java.util.Scanner;

public class exo9 {

	public static void main(String[] args) {
		Scanner clavier = new Scanner(System.in);
		
		System.out.println("aimer vous les frittes ?");
		
	    char rep = clavier.next().charAt(0);
	    
	    while(rep != 'o' || rep != 'n') {
	    	
	    	
	    	
	    	System.out.println("aimer vous les frittes ?");
	    	
	    	rep = clavier.next().charAt(0);
	    	
	    	
	    	
	    }

	}

}
